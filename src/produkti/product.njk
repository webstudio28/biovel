---
layout: base.njk
pagination:
    data: products
    size: 1
    alias: product
permalink: "/produkti/{{ product.meta_title }}/"
eleventyComputed:
    title: "{{ product.title }}"
    description: "{{ product.short_description }}"
---

<section class="py-12 bg-primary-sand/30">
    <div class="max-w-4xl w-full mx-auto px-4 flex flex-col gap-6">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-primary-evergreen">{{ product.title }}</h1>
        <p class="text-primary-deepsea">{{ product.long_description }}</p>

        {% if product.images and product.images.length %}
        <div class="rounded-3xl overflow-hidden shadow-md bg-white flex items-center justify-center p-6">
            <img src="{{ product.images[0] }}" alt="{{ product.title }}" class="max-h-64 object-contain">
        </div>
        {% endif %}
    </div>
</section>


