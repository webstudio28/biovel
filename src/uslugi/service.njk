---
layout: base.njk
pagination:
    data: services
    size: 1
    alias: service
permalink: "/uslugi/{{ service.slug }}/"
eleventyComputed:
    title: "{{ service.name }}"
    description: "{{ service.description }}"
---

<section class="py-12 bg-primary-sand/30">
    <div class="max-w-4xl w-full mx-auto px-4 flex flex-col gap-6">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-primary-evergreen">{{ service.name }}</h1>
        <p class="text-primary-deepsea">{{ service.description }}</p>

        {% if service.image %}
        <div class="rounded-3xl overflow-hidden shadow-md">
            <img src="/{{ service.image }}" alt="{{ service.name }}" class="w-full h-64 object-cover">
        </div>
        {% endif %}
    </div>
</section>


